<?xml version="1.0" encoding="utf-8"?>
<registry>
	
	<!-- Enums -->
	
	<enum name="BlendMode">
		<value name="Normal" ui_name="Normal" ui_desc="Standard alpha blending."/>
		<value name="Multiply" ui_name="Multiply" ui_desc="Multiply colors together."/>
		<value name="Screen" ui_name="Screen" ui_desc="Screen blend mode."/>
		<value name="Add" ui_name="Add" ui_desc="Additive blending."/>
		<value name="Subtract" ui_name="Subtract" ui_desc="Subtractive blending."/>
		<value name="Darken" ui_name="Darken" ui_desc="Select darker color."/>
		<value name="Lighten" ui_name="Lighten" ui_desc="Select lighter color."/>
		<value name="Difference" ui_name="Difference" ui_desc="Absolute difference."/>
		<value name="Overlay" ui_name="Overlay" ui_desc="Combines multiply and screen."/>
	</enum>
	
	<enum name="LUTInterp">
		<value name="Nearest" ui_name="Nearest" ui_desc="Nearest neighbor interpolation."/>
		<value name="Trilinear" ui_name="Trilinear" ui_desc="Trilinear interpolation."/>
		<value name="Tetrahedral" ui_name="Tetrahedral" ui_desc="Tetrahedral interpolation."/>
	</enum>

	<!-- Filter nodes -->

	<node name="Blend">
		<property name="blend_mode" type="BlendMode" default="BlendMode::Normal" ui_name="Blend Mode" ui_desc="How to combine the images."/>
		<property name="blend_constants" type="color" default="1.0,1.0,1.0,1.0" ui_name="Blend Constants" ui_desc="Constants used in certain blend modes."/>
		<property name="clamp_result" type="bool" default="true" ui_name="Clamp Result" ui_desc="Clamp output to [0,1] range."/>
	</node>

	<node name="Select">
		<property name="input_index" type="i32" default="0" ui_name="Input Index" ui_desc="Index of the input to select."/>
	</node>
	
	<node name="Transform">
		<property name="translation" type="f32x2" default="0.0,0.0" ui_name="Translation" ui_desc="Translation offset in pixels."/>
		<property name="scale" type="f32x2" default="1.0,1.0" ui_name="Scale" ui_desc="Scaling factors."/>
		<property name="pivot" type="f32x2" default="0.5,0.5" ui_name="Pivot Point" ui_desc="Pivot point for rotation and scaling (normalized coordinates 0-1)."/>
		<property name="rotation" type="f32" default="0.0" ui_name="Rotation" ui_desc="Rotation angle in degrees."/>
		<property name="crop_rect" type="rect" default="0.0,0.0,1.0,1.0" ui_name="Crop Rectangle" ui_desc="Crop rectangle (normalized coordinates 0-1)."/>
	</node>

	<node name="ColorCorrection">
		<property name="brightness" type="float" default="0.0" min="-1.0" max="1.0"/>
		<property name="contrast" type="float" default="1.0" min="0.0" max="2.0"/>
		<property name="saturation" type="float" default="1.0" min="0.0" max="2.0"/>
		<property name="lut" type="path" ui_name="LUT Path" ui_desc="Path to 3D LUT file."/>
		<property name="lut_interp" type="LUTInterp" default="LUTInterp::Trilinear" ui_name="LUT Interpolation" ui_desc="Algorithm for LUT interpolation."/>
	</node>

	<!-- Input nodes -->

	<node name="ImageInput">
		<property name="image_path" type="path" ui_name="Image Path" ui_desc="Path to image file."/>
	</node>

	<node name="StreamInput">
		<property name="stream_url" type="u8string" ui_name="Stream URL" ui_desc="URL of the video stream."/>
		<property name="stream_buffering" type="i32" default="1000" ui_name="Buffering" ui_desc="Buffering time in milliseconds."/>
	</node>

	<!-- Output nodes -->

	<node name="WindowOutput">
		<property name="name" type="u8string" default="&quot;Vortex Output Window&quot;" ui_name="Window Title" ui_desc="Title of the output window."/>
		<property name="window_size" type="sizeu" default="1920,1080" ui_name="Window Size" ui_desc="Resolution of the output window."/>
		<property name="framerate" type="vortex::ratio32_t" default="60,1" ui_name="Framerate" ui_desc="Framerate of the output window."/>
	</node>
	
	<node name="NDIOutput">
		<property name="name" type="u8string" default="&quot;Vortex NDI Output&quot;" ui_name="NDI Name" ui_desc="Name of the NDI stream."/>
		<property name="window_size" type="sizeu" default="1920,1080" ui_name="Window Size" ui_desc="Resolution of the output window."/>
		<property name="framerate" type="vortex::ratio32_t" default="60,1" ui_name="Framerate" ui_desc="Framerate of the output window."/>
	</node>
	
</registry>